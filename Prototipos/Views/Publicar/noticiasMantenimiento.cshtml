@model IEnumerable<DataContracts.Noticias>

<html>
<head>
    <title>PROMETHEUS GYM</title>
    <meta charset="UTF-8">
    <meta name="title" content="PROMETHEUS MUSCLE FIT GYM">
    <meta name="description" content="Descripción de la WEB">
    <link href="~/Content/estilosBody.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/misScripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="margin-top: 50px;">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="container">
                <h2>Mantenimiento de noticias</h2><br /><br />
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.titulo)</th>
                            <th>@Html.DisplayNameFor(model => model.fechaRealizacion)</th>
                            <th class="text-center">Acción</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                        <td>@Html.FormatValue("dd-MM-yyyy", item.fechaRealizacion.ToString("dd-MM-yyyy"))</td>
                        <td class="text-center">
                            @{ 
                                if (ViewBag.Render)
                                {
                                    <a class='btn btn-info btn-xs' href="@Url.Action("modificarNoticia", "Publicar", new { id = item.ID })" style="margin-right:3px;"><span class="glyphicon glyphicon-edit"></span> Modificar</a>
                                    <a href="@Url.Action("borrarNoticia", "Publicar", new { id = item.ID })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Eliminar</a>
                                }
                            }
                        
                        <a href="@Url.Action("detalleNoticia", "Publicar", new { id = item.ID })" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-comment"></span> Detalle</a> 
                        
                        </td>
                    </tr>
                    }

                </table>
                <div class="pagination">
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </div>
            </div>
            <div class="col-lg-4"></div>
            <div class="col-lg-2">
                @{ 
                    if (ViewBag.Render)
                    {
                         <a class="btn btn-info" href="@Url.Action("agregarNoticia", "Publicar")"> Agregar nueva noticia</a>
                    }
                }
                
            </div>
            <div class="col-lg-4"></div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</body>
</html>