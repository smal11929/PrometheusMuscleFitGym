@model IEnumerable <DataContracts.Mensaje>
<html>
<head>
    <title>PROMETHEUS GYM</title>
    <meta charset="UTF-8">
    <meta name="title" content="PROMETHEUS MUSCLE FIT GYM">
    <meta name="description" content="Descripción de la WEB">
    <link href="~/Content/estilosBody.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/misScripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
    <style type="text/css">
        #summernote {
            height: 300px !important;
        }
    </style>
</head>
<body>
    <div style="margin-top: 50px;">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="container">
                <h2>Mensajes</h2><br /><br />
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>Selccionar</th>
                            <th>@Html.DisplayNameFor(model => model.mensaje1)</th>
                            <th>@Html.DisplayNameFor(model => model.IDReceptor)</th>
                            <th>@Html.DisplayNameFor(model => model.IDEmisor)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                     <tr>
                        <td>
                            <input type="checkbox" name="seleccionar">
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.mensaje1)</td>
                        <td>@Html.DisplayFor(modelItem => item.IDReceptor)</td>
                        <td>@Html.DisplayFor(modelItem => item.IDEmisor)</td>
                    </tr>
                    }
                    

                </table>
                <div class="pagination">
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </div><br /><br />
                <form method="post" class="summer" style="height:300px;">
                    <textarea id="summernote" name="editordata" style="resize:none;"></textarea><br /><br />
                    <a class="btn btn-info" href="sms:+50660163528"> Enviar mensaje de texto</a>
                </form><br /><br /><br />
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</body>
</html>
<script>
    $('#summernote').summernote();
</script>