@model IEnumerable<DataContracts.Notificaciones>

<html>
<head>
    <title>PROMETHEUS GYM</title>
    <meta charset="UTF-8">
    <meta name="title" content="PROMETHEUS MUSCLE FIT GYM">
    <meta name="description" content="Descripción de la WEB">
    <link href="~/Content/estilosBody.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/misScripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
    <style type="text/css">
        #summernote {
            height: 300px !important;
        }
    </style>
</head>
<body>
    <div style="margin-top: 50px;">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="container">
                <h2>notificaciones</h2><br /><br />
                <table class="table table-striped custab">
                    <thead>
                        <tr>
                            <th>Selccionar</th>
                            <th>@Html.DisplayNameFor(model => model.titulo)</th>
                            <th>@Html.DisplayNameFor(model => model.mensaje)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="seleccionar">
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                            <td>@Html.DisplayFor(modelItem => item.mensaje)</td>
                        </tr>
                    }


                </table>
                <div class="pagination">
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </div><br /><br />
                
                @using (Html.BeginForm("AgregarNotificaciones", "Envios", FormMethod.Post, new { @class = "form"}))
                {
                    <label class="col-md-4 control-label" for="psw">Título</label>
                    <input class="form-control" required autocomplete="off" id="titulo" /><br /><br />

                    <textarea id="summernote" name="editordata" class="summer" style="resize:none;"></textarea><br /><br />
                    <button type="submit"><a class="btn btn-info">Notificar</a></button>
                }

                @*<form method="post" class="summer" style="height:300px;">
        </form><br /><br /><br />*@
            </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</body>
</html>
<script>
    $('#summernote').summernote();
</script>