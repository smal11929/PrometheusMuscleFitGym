@model IEnumerable<DataContracts.Notificaciones>

@{
    ViewBag.Title = "listaNotificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>listaNotificaciones</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mensaje)
        </th>
        <th>
            Acciones
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mensaje)
            </td>
            <td>
                @Html.ActionLink("Edit", "updateNotificacion", new { id = item.ID }) |
                @Html.ActionLink("Delete", "deleteNotificacion", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<div style="background-color:black">
    @Html.ActionLink("Agregar", "AgregarNotificaciones")
</div>
