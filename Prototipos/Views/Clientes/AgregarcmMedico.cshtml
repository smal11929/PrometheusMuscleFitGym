@model DataContracts.HistorialMedico

<html>
<head>
    <title>PROMETHEUS GYM</title>
    <meta charset="UTF-8">
    <meta name="title" content="PROMETHEUS MUSCLE FIT GYM">
    <meta name="description" content="Descripción de la WEB">
    <link href="~/Content/estilosBody.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/misScripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container" style="margin-top:50px;">
        <form class="form-horizontal" action=" " method="post" id="contact_form">
            <fieldset>
                <!-- Form Name -->
                <class style="text-align:center;">
                    
                    @using (Html.BeginForm("AgregarcmMedico", "Clientes", FormMethod.Post, new { @class = "form" }))
                    {
                        @Html.AntiForgeryToken()
                    <h2>Historial Médico</h2><br />
                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Cédula</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Usuarios.cedula, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Cédula", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Nombre</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Usuarios.nombre, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Nombre", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Apellidos</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Usuarios.apellido1, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Primer Apellido", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Sexo</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Usuarios.sexo, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Sexo", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>

                    <!-- Select Basic -->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Alcohol</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                @Html.DropDownListFor(model => model.alcohol, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- Select Basic -->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Fumar</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                @Html.DropDownListFor(model => model.fumado, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- Select Basic -->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Hipertensión</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                @Html.DropDownListFor(model => model.hipertension, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- Select Basic -->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Diabetes</label>
                        <div class="col-md-4 selectContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                @Html.DropDownListFor(model => model.diabetes, (IEnumerable<SelectListItem>)ViewBag.Opciones, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label">Medicamentos</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                @Html.EditorFor(model => model.medicamentos, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "", @placeholder = "Medicamentos" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Fractura</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                @Html.EditorFor(model => model.Usuarios.apellido1, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Primer Apellido" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Cirugía</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                @Html.EditorFor(model => model.cirugias, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Cirugía" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Alergias</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                @Html.EditorFor(model => model.alergias, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Alergias" } })
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->
                    <!--Falta-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Problemas articulares</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                <input name="articulares" class="form-control" type="text">
                            </div>
                        </div>
                    </div>

                    <!-- Text input-->

                    <div class="form-group">
                        <label class="col-md-4 control-label">Otros</label>
                        <div class="col-md-4 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                @Html.EditorFor(model => model.otras, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @placeholder = "Otros" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-4">
                            <button name="adduser" type="submit" class="btn btn-warning btn-block" id="contact-submit">Descargar</button>
                            <button name="adduser" type="submit" class="btn btn-warning btn-block" id="contact-submit">Guardar cambios</button>
                        </div>
                    </div>

                }

            </fieldset>
        </form>
    </div>
</body>
</html>