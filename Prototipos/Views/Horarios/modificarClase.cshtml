@model DataContracts.Clases
<html>
<head>
    <title>PROMETHEUS GYM</title>
    <meta charset="UTF-8">
    <meta name="title" content="PROMETHEUS MUSCLE FIT GYM">
    <meta name="description" content="Descripción de la WEB">
    <link href="~/Content/estilosBody.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/misScripts.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container" style="margin-top:50px;">
        <form class="form-horizontal" action=" " method="post" id="contact_form">
            <fieldset>
                <!-- Form Name -->
                <class style="text-align:center;">


                    @using (Html.BeginForm("modificarClase", "Horarios", FormMethod.Post, new { @class = "form-control" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Modificar clase</h2><br />

                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Nombre clase</label>
                            <div class="col-md-4 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @style = "", @required = "required;", @type = "text", @autocomplete = "off" } })
                                </div>
                            </div>
                        </div>

                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Día de la clase</label>
                            <div class="col-md-4 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                    @Html.DropDownListFor(model => model.dia, (IEnumerable<SelectListItem>)ViewBag.Dias, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>


                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Hora inicio</label>
                            <div class="col-md-4 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.EditorFor(model => model.horaInicio, new { htmlAttributes = new { @id = "datepicker2", @class = "form-control", @style = "", @required = "required;", @type = "time", @autocomplete = "off" } })
                                </div>
                            </div>
                        </div>

                        <!-- Text input-->

                        <div class="form-group">
                            <label class="col-md-4 control-label">Hora fin</label>
                            <div class="col-md-4 inputGroupContainer">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.EditorFor(model => model.horaFin, new { htmlAttributes = new { @id = "datepicker3", @class = "form-control", @style = "", @required = "required;", @type = "time", @autocomplete = "off" } })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <button name="adduser" type="submit" class="btn btn-warning btn-block" id="contact-submit">Guardar clase</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-4">
                                <a class="btn btn-warning btn-block" href="javascript:history.back()"> Volver atras</a>
                            </div>
                        </div>
                    }

                </class>        
            </fieldset>
        </form>
    </div>
</body>

</html>
<script>
    window.onload = function () {
        var fecha = new Date(); //Fecha actual
        var mes = fecha.getMonth() + 1; //obteniendo mes
        var dia = fecha.getDate(); //obteniendo dia
        var ano = fecha.getFullYear(); //obteniendo año
        var hora = fecha.getHours();
        var minuto = fecha.getMinutes();
        var estado = fecha.getTimezoneOffset();
        if (dia < 10)
            dia = '0' + dia; //agrega cero si el menor de 10
        if (mes < 10)
            mes = '0' + mes //agrega cero si el menor de 10
        document.getElementById('datepicker').value = ano + "-" + mes + "-" + dia;
        document.getElementById('datepicker2').value = hora + ":" + minuto;
        document.getElementById('datepicker3').value = hora + ":" + minuto;
    }
</script>
